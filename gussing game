secret_word = "future"
guess = ""
guess_count = 0
guess_limit = 3
out_of_guesses = False
print("Hint: What is always in front of you but canâ€™t be seen?")
while guess != secret_word and not(out_of_guesses):
    if guess_count < guess_limit:
        guess = input("Enter guess: ")
        guess_count += 1
    else:
        out_of_guesses =True
if out_of_guesses:
    print("Better Luck Next Time")
else:
    print(" Congo you WON")
